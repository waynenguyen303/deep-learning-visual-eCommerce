<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bl"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.waynage7.CS5542_lab3.RegisterActivity"
    tools:showIn="@layout/activity_register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Register"
        android:textSize="35dp"
        android:textColor="#000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:id="@+id/lbl_RegisterHeader"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/lbl_RegisterHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <EditText
            android:id="@+id/txt_userfullname"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_RegisterHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Full Name"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/txt_useremail"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_RegisterHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_RegisterHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter New UserName"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txt_userpw"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_RegisterHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter New Password"
            android:inputType="textEmailAddress" />

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Register"
        android:id="@+id/lbl_Registerbtn"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>